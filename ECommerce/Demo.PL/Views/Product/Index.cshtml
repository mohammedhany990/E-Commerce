@model IEnumerable<ProductViewModel>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Products</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row  pb-3">
            <div class="col-6">
                </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>



        @if (Model?.Count() > 0)
        {
            <table id="tableData" class="table table-bordered table-striped">
                <thead>
                <tr>
                        <td>@Html.DisplayNameFor(P => P.Title)</td>
                        <td>@Html.DisplayNameFor(P => P.ISBN)</td>
                        <td>@Html.DisplayNameFor(P => P.ListPrice)</td>
                        <td>@Html.DisplayNameFor(P => P.Author)</td>
                        <td>@Html.DisplayNameFor(P => P.Category)</td>
                </tr>

                </thead>

                
            </table>
        }
        else
        {
            <div class="mt-3 alert alert-danger">
                <h1>There are no Products</h1>
            </div>
        }
    </div>
</div>



@section Scripts{
    <script src="~/js/product.js"></script>
}

           
